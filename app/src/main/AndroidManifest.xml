<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.hustzxd.iamhere">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <!-- 允许联网 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- 获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <!-- 获取sd卡写的权限，用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- 允许读取手机状态 用于创建BmobInstallation -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <!-- 允许读取网络状态信息，用于获取wifi的信息 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:label="登录界面">
        </activity>
        <activity
            android:name=".activity.PersonalInfoActivity"
            android:label="用户信息">
        </activity>
        <activity
            android:name=".activity.RegisterActivity"
            android:label="注册界面">
        </activity>
        <activity
            android:name=".activity.LaunchActivity"
            android:label="发起签到">
        </activity>
        <activity
            android:name=".activity.SignInActivity"
            android:label="我要签到">
        </activity>
        <activity
            android:name=".activity.SearchLaunchActivity"
            android:label="我发起的签到">
        </activity>
        <activity
            android:name=".activity.SearchCheckinsActivity"
            android:label="我的签到记录">
        </activity>
        <activity
            android:name=".ShowSigninActivity"
            android:label="签到记录统计">
        </activity>
    </application>

</manifest>